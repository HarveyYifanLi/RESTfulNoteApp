<% include ../partials/header %>

<div class="ui text container segment">
    <div class="ui huge header">Create a new BR Note</div>
    <form class="ui form" action="/notes" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="noteVar[title]" placeholder="title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="noteVar[image]" placeholder="image URL">
        </div>
        <div class="field">
            <label>Note Content</label>
            <textarea name="noteVar[body]"></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>

<% include ../partials/footer %>
